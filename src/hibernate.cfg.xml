<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 5.6//EN" "http://www.hibernate.org/dtd/hibernate-configuration-5.6.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.hbm2ddl.auto">update</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hbm_test_3</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.show_sql">true</property>

		<mapping class="com.sat.entity.RegularEmployee" />
		<mapping class="com.sat.entity.ContractEmployee" />
		<mapping class="com.sat.entity.Employee" />
	</session-factory>
</hibernate-configuration>  